<header class="fixed top-0 left-0 w-full bg-[color:var(--color-secondary)]/80 backdrop-blur-md text-[color:var(--color-text)] z-50 shadow-md">
  <nav class="max-w-6xl mx-auto flex justify-between items-center px-6 py-4">
    <!-- LOGO -->
    <a href="/" class="flex items-center space-x-2">
      <img src="/logos/logo.png" alt="Logo genérico" class="h-10 w-auto" />
      <span class="font-semibold text-lg">NombreEmpresa</span>
    </a>

    <!-- LINKS -->
    <ul class="hidden md:flex space-x-8 text-sm font-medium">
      <li><a href="/" class="hover:text-[color:var(--color-primary)] transition">Inicio</a></li>
      <li><a href="/sobre-nosotros" class="hover:text-[color:var(--color-primary)] transition">Sobre nosotros</a></li>
      <li><a href="/servicios" class="hover:text-[color:var(--color-primary)] transition">Servicios</a></li>
      <li><a href="/proyectos" class="hover:text-[color:var(--color-primary)] transition">Proyectos</a></li>
      <li><a href="/contacto" class="hover:text-[color:var(--color-primary)] transition">Contacto</a></li>
    </ul>

    <!-- MENU MÓVIL -->
    <button class="md:hidden p-2 hover:bg-[color:var(--color-primary)]/10 rounded-lg transition" aria-label="Abrir menú">
      <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>
</header>