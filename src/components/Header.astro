---
// En la parte del script (frontmatter)
---

<header class="fixed top-0 left-0 w-full bg-[color:var(--color-secondary)]/80 backdrop-blur-md text-[color:var(--color-text)] z-50 shadow-md">
  <nav class="max-w-6xl mx-auto flex justify-between items-center px-6 py-4" aria-label="Navegación principal">
    <!-- LOGO -->
    <a href="#inicio" class="flex items-center space-x-2">
      <img src="/images/tuLogo.png" alt="Logo genérico" class="h-20 w-auto" />
      <span class="font-semibold text-lg">NombreEmpresa</span>
    </a>

    <!-- LINKS DESKTOP -->
    <ul class="hidden md:flex space-x-8 text-sm font-medium">
      <li><a href="#inicio" class="hover:text-[color:var(--color-primary)] transition">Inicio</a></li>
      <li><a href="#servicios" class="hover:text-[color:var(--color-primary)] transition">Servicios</a></li>
      <li><a href="#proyectos" class="hover:text-[color:var(--color-primary)] transition">Proyectos</a></li>
      <li><a href="#nosotros" class="hover:text-[color:var(--color-primary)] transition">Nosotros</a></li>
      <li><a href="#contacto" class="hover:text-[color:var(--color-primary)] transition">Contacto</a></li>
    </ul>

    <!-- BOTÓN MENÚ MÓVIL -->
    <button
      id="mobile-menu-button"
      class="md:hidden p-2 hover:bg-[color:var(--color-primary)]/10 rounded-lg transition relative z-60"
      aria-label="Abrir menú de navegación"
    >
      <!-- Icono Hamburguesa -->
      <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
      
      <!-- Icono X -->
      <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
  </nav>

  <!-- MENÚ MÓVIL -->
  <div id="mobile-menu" class="md:hidden fixed top-0 left-0 w-full h-0 bg-[color:var(--color-secondary)]/95 backdrop-blur-md overflow-hidden transition-all duration-300 ease-in-out z-50">
    <div class="pt-24 pb-8 px-6">
      <ul class="space-y-6 text-lg font-medium">
        <li>
          <a href="#inicio" class="block py-3 hover:text-[color:var(--color-primary)] transition border-b border-[color:var(--color-border)]">
            Inicio
          </a>
        </li>
        <li>
          <a href="#servicios" class="block py-3 hover:text-[color:var(--color-primary)] transition border-b border-[color:var(--color-border)]">
            Servicios
          </a>
        </li>
        <li>
          <a href="#proyectos" class="block py-3 hover:text-[color:var(--color-primary)] transition border-b border-[color:var(--color-border)]">
            Proyectos
          </a>
        </li>
        <li>
          <a href="#nosotros" class="block py-3 hover:text-[color:var(--color-primary)] transition border-b border-[color:var(--color-border)]">
            Nosotros
          </a>
        </li>
        <li>
          <a href="#contacto" class="block py-3 hover:text-[color:var(--color-primary)] transition border-b border-[color:var(--color-border)]">
            Contacto
          </a>
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
// Funcionalidad del menú móvil
document.addEventListener('DOMContentLoaded', function() {
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  
  let isMenuOpen = false;
  
  function toggleMobileMenu() {
    isMenuOpen = !isMenuOpen;
    
    if (isMenuOpen) {
      // Abrir menú
      mobileMenu.classList.remove('h-0');
      mobileMenu.classList.add('h-screen');
      menuIcon.classList.add('hidden');
      closeIcon.classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    } else {
      // Cerrar menú
      mobileMenu.classList.remove('h-screen');
      mobileMenu.classList.add('h-0');
      menuIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
      document.body.style.overflow = '';
    }
  }
  
  // Evento del botón
  mobileMenuButton.addEventListener('click', toggleMobileMenu);
  
  // Cerrar menú al hacer clic en un enlace
  const mobileLinks = mobileMenu.querySelectorAll('a');
  mobileLinks.forEach(link => {
    link.addEventListener('click', function() {
      if (isMenuOpen) {
        toggleMobileMenu();
      }
    });
  });
  
  // Cerrar menú con tecla Escape
  document.addEventListener('keydown', function(event) {
    if (isMenuOpen && event.key === 'Escape') {
      toggleMobileMenu();
    }
  });
});
</script>

<style>
/* Estilos específicos para asegurar que funcione */
#mobile-menu {
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

/* Forzar que los iconos tengan el color correcto */
#menu-icon, #close-icon {
  color: currentColor;
}

/* Asegurar que hidden funcione correctamente */
.hidden {
  display: none !important;
}

/* Asegurar que el botón esté por encima del menú móvil */
#mobile-menu-button {
  z-index: 60 !important;
  position: relative;
}

/* El menú móvil debe tener un z-index menor que el botón */
#mobile-menu {
  z-index: 50 !important;
}

/* Estilos para el body */
body {
  transition: overflow 0.3s ease;
  margin: 0;
  font-family: "Poppins", sans-serif;
  background-color: var(--color-bg);
  color: var(--color-text);
}
</style>